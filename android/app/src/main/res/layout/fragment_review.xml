    <View
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_header_app_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:elevation="50dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:id="@+id/rvReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutPlaceHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/placeholder_no_data" />

        <TextView
            android:textDirection="anyRtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/muli"
            android:text="@string/lbl_no_reviews"
            android:textColor="@color/colorDarkGrey"
            android:textSize="24sp" />

<!--        <TextView-->
<!--            android:textDirection="anyRtl"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="60dp"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:layout_marginEnd="60dp"-->
<!--            android:fontFamily="@font/muli"-->
<!--            android:gravity="center"-->
<!--            android:text="@string/lbl_no_leaves"-->
<!--            android:textColor="@color/colorDarkGrey"-->
<!--            android:textSize="14sp" />-->

    </LinearLayout>
    <include layout="@layout/spinner"
        android:visibility="gone"
        android:id="@+id/spinner"/>


</androidx.constraintlayout.widget.ConstraintLayout>