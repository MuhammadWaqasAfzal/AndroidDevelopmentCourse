<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ui.registration.OTPActivity">

    <include layout="@layout/blue_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblEmailVerification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/muli"
                android:text="@string/email_verification"
                android:textColor="@color/colorPrimaryDark"
                android:textFontWeight="900"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@id/edPin1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            `

            <TextView
                android:id="@+id/lblOtpInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/muli_bold"
                android:gravity="center"
                android:text="@string/otp_instruction"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblEmailVerification" />

            <EditText
                android:id="@+id/hiddenPin"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="@null"
                android:cursorVisible="false"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#00000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
                android:id="@+id/edPin1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:backgroundTint="@color/colorStroke"
                android:fontFamily="@font/muli"
                android:gravity="center"
                android:textColor="@color/colorDarkGrey"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPin2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
                android:id="@+id/edPin2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorStroke"
                android:fontFamily="@font/muli"
                android:gravity="center"
                android:textColor="@color/colorDarkGrey"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPin3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/edPin1"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
                android:id="@+id/edPin3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorStroke"
                android:fontFamily="@font/muli"
                android:gravity="center"
                android:textColor="@color/colorDarkGrey"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPin4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/edPin2"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
                android:id="@+id/edPin4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorStroke"
                android:fontFamily="@font/muli"
                android:gravity="center"
                android:textColor="@color/colorDarkGrey"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPin5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/edPin3"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
                android:id="@+id/edPin5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorStroke"
                android:fontFamily="@font/muli"
                android:gravity="center"
                android:textColor="@color/colorDarkGrey"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPin6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/edPin4"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
                android:id="@+id/edPin6"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:backgroundTint="@color/colorStroke"
                android:fontFamily="@font/muli"
                android:gravity="center"
                android:textColor="@color/colorDarkGrey"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/edPin5"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/bg_btn_yellow"
                android:fontFamily="@font/muli"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/lbl_verify"
                android:textAllCaps="false"
                android:textColor="@color/review_card_color"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/edPin1" />

            <TextView
                android:id="@+id/tvNotReceiveCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/muli_bold"
                android:text="@string/lbl_not_receive_code"
                android:textColor="@color/colorDarkGrey"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/btnVerify"
                app:layout_constraintStart_toStartOf="@+id/btnVerify"
                app:layout_constraintTop_toBottomOf="@id/btnVerify" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>