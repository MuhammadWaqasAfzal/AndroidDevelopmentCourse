<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootViewProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true"
    android:paddingBottom="10sp"
    tools:context=".ui.settings.SettingsFragment">

    <ImageView
        android:id="@+id/ivEditName"
        android:layout_width="16sp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:clickable="true"
        android:elevation="100sp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:src="@drawable/pen"
        app:layout_constraintEnd_toEndOf="@id/layoutHeader"
        app:layout_constraintTop_toTopOf="@id/layoutHeader" />

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorWhite"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="32sp"
                android:fontFamily="@font/muli"
                android:textColor="@color/colorDarkGrey"
                android:textDirection="anyRtl"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="0.0" />


            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/muli"
                android:textColor="@color/colorDarkGrey"
                android:textDirection="anyRtl"
                android:textSize="12sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:background="@color/strokeColor" />

            <LinearLayout
                android:id="@+id/layoutMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvChangeLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"

                    android:drawableStart="@drawable/internet"
                    android:drawablePadding="28dp"
                    android:fontFamily="@font/muli"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center_vertical"
                    android:text="@string/lbl_language"
                    android:textColor="@color/colorDarkGrey"
                    android:textDirection="anyRtl"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/tvChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:clickable="true"
                    android:drawableStart="@drawable/change_password"
                    android:drawablePadding="28dp"
                    android:fontFamily="@font/muli"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center_vertical"
                    android:text="@string/settigns_change_password"
                    android:textColor="@color/colorDarkGrey"
                    android:textDirection="anyRtl"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/tvLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/icon_logout"
                    android:drawablePadding="32dp"
                    android:fontFamily="@font/muli"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center_vertical"
                    android:text="@string/lbl_logout"
                    android:textColor="@color/colorDarkGrey"
                    android:textDirection="anyRtl"
                    android:textSize="13sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bg_circle_outline"
        android:elevation="2dp"
        android:padding="5sp"
        android:src="@drawable/ic_avatar_male"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:indicatorColor="@color/background_color"
        app:indicatorSize="70dp"
        android:visibility="gone"
        android:id="@+id/spinner"
        app:trackColor="@color/buttonBackgroundColor"
        app:trackThickness="8sp"
        android:indeterminate="true" />


</androidx.constraintlayout.widget.ConstraintLayout>

